{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

    <div>
    <table class="table">
        <thead>
                <th style="font-size:x-large">Articles disponibles sur le site</th>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', {'id': article.id}) }}">{{ article.Titre }}</a><a> par</a>
                    {% if article.Auteur %}
                    <a href="{{ path('user_show', {'id': article.Auteur.id}) }}">{{article.Auteur.Pseudo}}</a>
                    {% else %}
                    <a>[Compte Supprimé]</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun article en ligne</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <div>
    <a href="{{ path('article_new') }}" class="btn btn-lg btn-primary">Créer un nouvel article</a>
    </div>
{% endblock %}
